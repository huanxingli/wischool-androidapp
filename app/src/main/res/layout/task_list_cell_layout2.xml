<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/activity_background"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/list_text_rank"
            android:text="Lv.6"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="本宝宝很好"
            android:id="@+id/list_text_name"
            android:textColor="@color/white"
            android:textSize="21sp"
            android:layout_gravity="center"
            android:gravity="center"
            />
        <Button
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:id="@+id/list_btn_accept"
            android:text="接受"
            android:textColor="@color/black"
            android:background="@drawable/tasksure_btn_bg"
            android:layout_marginRight="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="horizontal"
        android:background="@color/white">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:id="@+id/list_image_touxiang"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:layout_marginLeft="10dp"
            />
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <!--<TextView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="0dp"-->
                <!--android:layout_weight="1"-->
                <!--android:layout_marginTop="5dp"-->
                <!--android:gravity="center|left"-->
                <!--android:text="信誉度:"-->
                <!--android:id="@+id/list_text_honour"/>-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="信誉度："
                    android:gravity="center|left"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="❤❤❤❤❤"
                    android:textColor="@color/red"
                    android:gravity="center|left"
                    android:id="@+id/list_text_honour"
                    android:textSize="18sp"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="地点:"
                android:id="@+id/list_text_location"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="要求:"
                android:id="@+id/list_text_request"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="时间："
                android:id="@+id/list_text_time"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="10dp"
            android:textSize="18sp"
            android:text="￥ 5元"
            android:id="@+id/list_text_money"/>
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/red"
        android:id="@+id/list_task_type"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="4dp"/>

</LinearLayout>
