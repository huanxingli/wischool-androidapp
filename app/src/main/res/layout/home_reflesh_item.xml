<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    android:background="#ffffff">

    <TextView
        android:layout_width="6dp"
        android:layout_height="match_parent"
        android:background="#ffff00"
        android:id="@+id/home_item_kind"/>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/ic_launcher"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/home_item_image"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/home_item_title"
        android:textStyle="bold"
        android:text="中午11点高场中通快递，送至G区"
        android:layout_toRightOf="@+id/home_item_image"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textSize="12sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/tab_blue"
        android:layout_marginTop="1dp"
        android:text="等待中"
        android:textColor="#ffffff"
        android:layout_below="@+id/home_item_title"
        android:layout_alignLeft="@+id/home_item_title"
        android:layout_alignStart="@+id/home_item_title"
        android:textSize="9sp"
        android:id="@+id/home_item_status"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:text="2017.01.04"
        android:textSize="9sp"
        android:layout_below="@+id/home_item_status"
        android:layout_alignLeft="@+id/home_item_status"
        android:layout_alignStart="@+id/home_item_status"
        android:id="@+id/home_item_time" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:text="广工龙洞校区G区"
        android:textSize="9sp"
        android:layout_below="@+id/home_item_time"
        android:layout_alignLeft="@+id/home_item_time"
        android:layout_alignStart="@+id/home_item_time"
        android:id="@+id/home_item_place"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:text="¥2"
        android:textSize="10sp"
        android:layout_below="@+id/home_item_place"
        android:layout_alignLeft="@+id/home_item_place"
        android:layout_alignStart="@+id/home_item_place"
        android:id="@+id/home_item_prize"
        android:textColor="#ff0000"/>


</RelativeLayout>